@using JatanWebApp.SignalR
@model GameLobby
@{
    var timeLimit = Model.GameManager.Settings.TurnTimeLimit;
    var cardCount = Model.GameManager.Settings.CardCountLossThreshold;
}
<div class="list-group rules-list">
    <div class="list-group-item">
        <i class="fa fa-fw fa-trophy" style="color:goldenrod" aria-hidden="true"></i>
        Score to win: <b class="pull-right">@Model.GameManager.Settings.ScoreNeededToWin</b>
    </div>
    <div class="list-group-item">
        <i class="fa fa-fw fa-clock-o" style="color:darkblue" aria-hidden="true"></i>
        Turn time limit: <b class="pull-right">@(timeLimit == 0 ? "None" : timeLimit.ToString() + " seconds")</b>
    </div>
        <div class="list-group-item">
        <i class="fa fa-fw fa-map-marker" style="color:orangered" aria-hidden="true"></i>
        Initial placements: <b class="pull-right">@Model.GameManager.Settings.InitialPlacementMode</b>
    </div>
    <div class="list-group-item">
        <i class="fa fa-fw fa-male" style="color:black" aria-hidden="true"></i>
        Robber mode: <b class="pull-right">@Model.GameManager.Settings.RobberMode</b>
    </div>
    <div class="list-group-item">
        <i class="fa fa-fw fa-gavel" style="color:brown" aria-hidden="true"></i>
        Card loss threshold: <b class="pull-right">@(cardCount == 0 ? "None" : cardCount.ToString())</b>
    </div>
    <div class="list-group-item">
        <i class="fa fa-fw fa-handshake-o" style="color:darkgreen" aria-hidden="true"></i>
        Player Trading:
        @if (Model.GameManager.Settings.AllowPlayerTrading)
        {
            <span class="pull-right"><i class="fa fa-check" style="color:green" aria-hidden="true"></i></span>
        }
        else
        {
            <span class="pull-right"><i class="fa fa-times" style="color:red" aria-hidden="true"></i></span>
        }
    </div>
</div>
